$(function () {
    var chart;
    $(document).ready(function() {
		    Highcharts.setOptions({
				  chart: {
						style: {
							fontFamily: '"Roboto Condensed", "Lucida Grande", "Lucida Sans Unicode", Verdana, Arial, Helvetica, sans-serif',
							fontSize: '12px'
						}
					}
				});
        chart = new Highcharts.Chart({
            chart: {
                renderTo: 'top',
                type: 'line',
                marginRight: 130,
                marginBottom: 25
            },
            title: {
                text: "<%= chart_title %>",
                x: -20 //center
            },
            credits: {
                enabled: false
            },
            subtitle: {
                text: 'Source: FTA Nexus',
                x: -20
            },
            xAxis: {
                type: 'datetime',
                dateTimeLabelFormats: {
                    hour: '%H:%M'
                }
            },
            yAxis: [{
                title: {
                    text: '', // 'Temperatur',
                    style: {
                        color: '#AA4643'
                    }
                },
                labels: {
                    formatter: function() {
                        return this.value +' °C';
                    },
                    style: {
                        color: '#AA4643'
                    }
                },
            }, {
                gridLineWidth: 0,
                title: {
                    text: '', // 'Luftdruck',
                },
                // press_data is a two-dimensional array. Finding the minimum requieres a block
                // indicating how to compare the array elements 
                // pres_data[0] => Date
                // press_data[1] => Value
                min: <%= "#{(press_data_min / 10).floor * 10}" %> ,
                startOnTick: false,
                labels: {
                    formatter: function() {
                        return this.value +' hPa';
                    },
                    style: {
                        color: '#4572A7'
                    }
                },
                opposite: true,
            }, {
                title: {
                    text: '', // 'Luftfeuchte'
                    style: {
                        color: '#89A54E'
                    }
                },
                labels: {
                    formatter: function() {
                        return this.value +' %';
                    },
                    style: {
                        color: '#89A54E'
                    }
                },
                opposite: true,
            }],
            tooltip: {
                formatter: function() {
                  var unit = {
                    'Luftdruck': 'hPa',
                    'Luftfeuchte': '%',
                    'Temperatur': '°C'
                  }[this.series.name];
                  var d = new Date(this.x);
                  return '<b>'+ this.series.name +'</b><br/>'+
                  d.format("HH:MM") +' Uhr: '+ this.y +' ' + unit;
                }
            },
            legend: {
                layout: 'vertical',
                align: 'left',
                x: 80,
                verticalAlign: 'top',
                y: 20,
                floating: true,
                backgroundColor: '#FFFFFF'
            },
            series: [{
                name: 'Luftdruck',
                type: 'column',
                yAxis: 1,
                data: <%= press_data  %>,
                pointStart: <%= start_unixtime %> // Date.UTC(2010, 0, 1)
            }, {
                name: 'Luftfeuchte',
                type: 'spline',
                marker: {
                    enabled: false
                },
                dashStyle: 'shortdot',
                color: '#89A54E',
                data: <%= humidity_data %>,
                yAxis: 2,
                pointStart: <%= start_unixtime %> // Date.UTC(2010, 0, 1)
            }, {
                name: 'Temperatur',
                color: '#AA4643',
                marker: {
                  symbol: 'circle'
                },
                data: <%= temp_data %>,
                pointStart: <%= start_unixtime %> // Date.UTC(2010, 0, 1)
            }],
        });
    });

});
